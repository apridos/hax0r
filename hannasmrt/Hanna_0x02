4. 
```
#include <stdio.h>

int main()
{
    int matrA [10] [10] , matrB [10] [10] , hasil [10] [10];
    int row = 2, col = 3;
    int i, j;

    printf("Masukkan array Matriks A :\n");
    for (i = 0 ; i < row ; i++)
        for (j = 0 ; j < col; j++){
            scanf("%d", &matrA [i] [j]);
            }

    printf("Masukkan array Matriks B :\n");
     for (i = 0 ; i < row ; i++)
        for (j = 0 ; j < col; j++){
            scanf("%d", &matrB [i] [j]);
            }

    printf("Hasil penjumlahan dari Matriks A dan Matriks B : \n");
    for (i = 0; i < row; i++)
    {
        for (j = 0; j < col; j++)
        {
            hasil [i] [j] = matrA [i] [j] + matrB [i] [j];
            printf("%d ", hasil [i] [j]);
        }
        printf("\n");
    }

    return 0;

}
```
